    #region Interface

    interface IStruct
    {
        /// <summary>
        ///  This will initialize the Structure using the byte array.
        /// </summary>
        /// <param name="data">The byte array.</param>
        void Initialize(byte[] data);
        /// <summary>
        /// This will convert the structure to a byte array.
        /// </summary>
        /// <returns></returns>
        byte[] ToByteArray();
    }

    #endregion

}

